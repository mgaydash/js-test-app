		<script type="text/javascript">
			jQuery(document).ready(function(){
				jQuery('body').prepend('<div id="nav"></div>');
				jQuery.get(
					"../view/nav.html", 
					function(response){
						jQuery("#nav").html(response);
					},
					"html"
				);		
				var cell = jQuery(".cell");
				var col = jQuery(".col");
				var canDraw = false;
				var bgcolor = "red";
				jQuery(window).mousedown(function(){
					canDraw = true;
				});jQuery(window).mouseup(function(){
					canDraw = false;
				});
				jQuery(".pick").click(function(e){
					bgcolor = jQuery(e.target).css("background-color");
				});
				cell.mouseover(function(e){
					if(canDraw)
						jQuery(e.target).css("background", bgcolor);
				});
				cell.click(function(e){
					jQuery(e.target).css("background", bgcolor);
				});
				for(var i = 0; i < 50; i++){
					col.append(cell.clone(true).css("display", "block"));
				}
				for(var i = 0; i < 50; i++){
					jQuery("body").append(col.clone(true));
				}
			});
		</script>
		<style>
			.cell{ 
				-moz-user-select: none; 
				-khtml-user-select: none; 
				-webkit-user-select: none; 
				-o-user-select: none; 
			}
			.li{
				display:block;
				float:left;
			}
